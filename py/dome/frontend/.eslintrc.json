{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "babel"],
  "extends": ["google", "plugin:react/recommended"],
  "rules": {
    "//": [
      "This is not really same as Google style guide, as this would ",
      "produce false negative when aligning with the first argument, see",
      "https://github.com/google/eslint-config-google/issues/12#issuecomment-352134238"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "MemberExpression": 2,
        "FunctionDeclaration": {
          "body": 1,
          "parameters": 2
        },
        "FunctionExpression": {
          "body": 1,
          "parameters": 2
        },
        "CallExpression": {
          "arguments": 2
        },
        "ignoredNodes": ["ConditionalExpression"]
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "args": "none",
        "varsIgnorePattern": "unused"
      }
    ],
    "no-undef": "error",
    "no-invalid-this": "off",
    "babel/no-invalid-this": "error",
    "require-jsdoc": "off",
    "new-cap": "off",
    "prefer-const": "error",
    "quotes": "off",
    "babel/quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ]
  }
}
