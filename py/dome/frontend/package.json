{
  "name": "dome",
  "version": "1.3.0",
  "description": "the factory server front end",
  "dependencies": {
    "date-and-time": "~0.6.2",
    "deepcopy": "~0.6.3",
    "immutable": "~3.8.2",
    "isomorphic-fetch": "~2.2.1",
    "material-ui": "~0.20.1",
    "material-ui-chip-input": "~0.19.0",
    "prop-types": "~15.6.1",
    "react": "~16.4.0",
    "react-dom": "~16.4.0",
    "react-measure": "~1.4.7",
    "react-redux": "~5.0.7",
    "react-sortable-hoc": "0.7.4",
    "redux": "~4.0.0",
    "redux-form": "~7.3.0",
    "redux-immutable": "~4.0.0",
    "redux-logger": "~3.0.6",
    "redux-thunk": "~2.2.0",
    "whatwg-fetch": "~2.0.4"
  },
  "devDependencies": {
    "babel-core": "~6.26.3",
    "babel-eslint": "~8.2.3",
    "babel-polyfill": "~6.26.0",
    "babel-preset-env": "~1.7.0",
    "babel-preset-react": "~6.24.1",
    "babel-preset-stage-2": "~6.24.1",
    "babelify": "~8.0.0",
    "browserify": "~16.2.2",
    "eslint": "~4.19.1",
    "eslint-config-google": "~0.9.1",
    "eslint-plugin-babel": "~5.1.0",
    "eslint-plugin-react": "~7.8.2"
  },
  "scripts": {
    "build": "browserify --debug --transform [ babelify ] --outfile bundle.js --entry index.js",
    "lint": "eslint index.js components constants actions reducers"
  },
  "babel": {
    "presets": [
      "react",
      "env",
      "stage-2"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "babel"
    ],
    "extends": [
      "google",
      "plugin:react/recommended"
    ],
    "rules": {
      "//": [
        "This is not really same as Google style guide, as this would ",
        "produce false negative when aligning with the first argument, see",
        "https://github.com/google/eslint-config-google/issues/12#issuecomment-352134238"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1,
          "MemberExpression": 2,
          "FunctionDeclaration": {
            "body": 1,
            "parameters": 2
          },
          "FunctionExpression": {
            "body": 1,
            "parameters": 2
          },
          "CallExpression": {
            "arguments": 2
          },
          "ignoredNodes": [
            "ConditionalExpression"
          ]
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none",
          "varsIgnorePattern": "unused"
        }
      ],
      "no-invalid-this": "off",
      "babel/no-invalid-this": "error",
      "require-jsdoc": "off",
      "new-cap": "off",
      "prefer-const": "error"
    }
  },
  "author": "Mao Huang <littlecvr@google.com>"
}
