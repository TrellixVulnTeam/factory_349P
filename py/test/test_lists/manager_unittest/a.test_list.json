{
  "inherit": ["base.test_list"],
  "label": "A",

  "constants": {
    "phase": "EVT",
    "enable_shopfloor": true,
    "component_list": ["cpu", "audio", "flash_chip"],
    "timestamp": 1,
    "__comment_timestamp": "this is used by testReloadConfig"
  },

  "options": {
    "engineering_password_sha1": "dummy_password_sha1",
    "ui_lang": "zh",
    "sync_event_log_period_secs": 0,
    "disable_cros_shortcut_keys": true,
    "core_dump_watchlist": []
  },

  "definitions": {
    "LEDTest": {
      "pytest_name": "led",
      "has_ui": true,
      "args": {
        "colors": ["RED", "GREEN", "BLUE"]
      }
    }
  },

  "tests": [
    {
      "id": "SMT",
      "subtests": [
        {
          "inherit": "LEDTest",
          "id": "FirstLEDTest"
        },
        {
          "inherit": "LEDTest",
          "id": "SecondLEDTest",
          "args": {
            "colors": ["RED", "GREEN"]
          }
        },
        {
          "pytest_name": "verify_components",
          "args": {
            "component_list": "eval! constants.component_list",
            "skip_shopfloor": "eval! not constants.enable_shopfloor"
          }
        },
        {
          "id": "Halt",
          "inherit": "HaltStep"
        },
        "LEDTest",
        "LEDTest"
      ]
    }
  ]
