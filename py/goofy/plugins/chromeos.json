{
  "backends": [
    {
      "name": "time_sanitizer",
      "args": {
        "base_time_files": ["/usr/local/etc/lsb-factory",
                            "/etc/lsb-release"]
      }
    },
    {
      "name": "disk_monitor",
      "args": {
        "period_secs": 120,
        "stateful_usage_threshold": 90
      }
    },
    {
      "name": "battery_monitor",
      "args": {
        "period_secs": 120,
        "critical_low_battery_pct": 5,
        "warning_log_battery_pct": 10
      }
    },
    {
      "name": "charge_manager",
      "args": {
        "period_secs": 120,
        "min_charge_pct": 88,
        "max_charge_pct": 89
      }
    },
    {
      "name": "cpu_usage_monitor",
      "args": {
        "period_secs": 120
      }
    },
    {
      "name": "cpu_freq_manager"
    },
    {
      "name": "connection_manager",
      "args": {
        "wlans": [
          {
            "ssid": "crosfactory20",
            "security": "psk",
            "passphrase": "crosfactory"
          },
          {
            "ssid": "crosfactory21",
            "security": "psk",
            "passphrase": "crosfactory"
          }
        ],
        "shuffle_wlans": true,
        "scan_wifi_periods_secs": 10
      }
    },
    {
      "name": "thermal_monitor",
      "args": {
        "period_secs": 120,
        "delta_threshold": 1.1
      }
    }
  ]
}
