{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "inherit": {
      "type": "string"
    },
    "plugins": {
      "type": "object",
      "patternProperties": {
        "^.+$": {
          "type": "object",
          "addtionalProperties": false,
          "properties": {
            "args": {
              "type": "object",
              "properties": {}
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "plugins"
  ]
}
